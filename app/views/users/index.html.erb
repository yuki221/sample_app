<% provide(:title, '全てのユーザー') %>


<h1>All users</h1>

<!-- test -->
<div class="users-index">
  <div class="container">
    <div class="user-item-box">
      <% @users.each do |user| %>

        <div class="user-item user-list">

          <% if user.image_id.present? %>
            <%= image_tag attachment_url(user, :image, :fill, 70, 70, format: "jpg"), class: 'user-img' %>
          <% else %>
            <%= image_tag('/images/default.jpg', size: '70x70', class: 'user-img') %>
          <% end %>

        </div>
          <div class="post-tag">
           <%= render 'posts/tag_list', tag_list: post.tag_list %>
           </div>
      <% end %>
    </div>
  </div>
  <%= paginate @users %>
</div>
